/* components/mine/mine.wxss */
@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";

.userInfo{
  width: 100%;
  height: 180rpx;
  background-color: #fff;
  border-top: 20rpx solid rgba(244, 245, 245, 1);
  border-bottom: 20rpx solid rgba(244, 245, 245, 1);
  display: flex;
  align-items: center;
}

.text-red{
  color: #C83636 !important;
}

.ava{
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  margin-left: 50rpx;
  margin-right: 20rpx;
}

.nickName{
  font-size: 36rpx;
  color: #BF5959;
  font-weight: bold;
  margin-left: 20rpx;
}

button:not([size='mini']){
  width: auto;
  min-height: auto;
}

button::after{
  border: none;
}
button{
  padding-left: 0;
  padding-right: 0;
  padding-top: 0;
  padding-bottom: 0;
  margin-bottom: 0;
  margin-top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0);
  font-weight: 500;
}
.content{
  display: flex;
}