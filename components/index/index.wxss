/* components/index/index.wxss */
/**index.wxss**/
@import "/colorui/animation.wxss";
@import "/colorui/icon.wxss";
@import "/colorui/main.wxss";

page{
  padding-bottom: 140rpx;
  background-color: #fff;
}

.sign_block{
  width: 95%;
  margin: 0 auto;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.top_tips{
  width: 90%;
  margin: 0 auto;
  /* background-color: #fff; */
  padding: 15rpx 5rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.bg-shadeBottom{
  background-image: linear-gradient(rgba(0, 0, 0, 0.01), rgba(0, 0, 0, 0.4));
}

.shadow{
  box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(0, 0, 0, 0.1);
}

.sign_block view{
  width: 220rpx;
  height: 80rpx;
  border-radius: 10rpx;
  box-shadow: 6rpx 6rpx 20rpx 0rpx rgba(0, 0, 0, 0.25);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
}

.banner{
  width: 92%;
  margin: 0 auto;
  height: 160rpx;
  border-radius: 10rpx;
  margin-top: 30rpx;
}

.image{
  height: 400rpx;
}

.image image{
  height: 400rpx !important;
  /* border-bottom: 2rpx solid rgba(244, 244, 244, 1); */
  border-bottom: 2rpx solid rgba(244, 244, 244, 1);
}

.content{
  left: 40rpx !important;
  font-size: 30rpx;
  color: #C83636;
}

.text-desc{
  width: 90%;
  margin: 0 auto;
  display: flex;
  /* align-items: center; */
  line-height: 45rpx;
  letter-spacing: 3rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}

.text-gray{
  width: 85%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.add{
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  /* justify-content: ; */
}

.add image{
  width: 100%;height: 100%;
}

.recommend{
  width: 95%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  box-shadow: 6rpx 6rpx 20rpx 0rpx rgba(0, 0, 0, 0.1);
  background-color: #fff;
  /* border: 1rpx solid rgba(244, 245, 245, 1); */
  padding: 30rpx 30rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
}

.text-time{
  font-size: 24rpx;
  color: gray;
  
}