/* components/comment/comment.wxss */
@import "/colorui/icon.wxss";
@import "/colorui/main.wxss";


.container{
  width: 100%;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 10rpx;
}   

.comment_top{
  padding: 25rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* margin-top: 20rpx; */
  color: #222222;
  font-weight: 600;
  padding-top: 40rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.comment_top image{
  width: 30rpx;
  height: 30rpx;
  border-bottom: 1rpx solid #C83636;
  margin-left: 10rpx;
}

.comment_top view:nth-child(2){
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-weight: 500;
  color: #C83636;
}

.comment_line{
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.comment_user{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.comment_user image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.comment_user view:nth-child(1){
  display: flex;
  align-items: center;
}

.comment{
  color: rgba(0, 0, 0, 0.5);
  font-size: 26rpx;
  letter-spacing: 3rpx;
  line-height: 45rpx;
  margin-top: 20rpx;
}

.reply_content{
  background-color: #F8F8F8;
  padding: 20rpx;
  letter-spacing: 3rpx;
  line-height: 45rpx;
  font-size: 26rpx;
  color: #3D3D3D;
  border-radius: 12rpx;
  margin-top: 20rpx;
}