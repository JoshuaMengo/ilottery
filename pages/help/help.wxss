@import "/components/index/index.wxss";

page{
  background-color: rgb(211, 79, 64);
}

.bg{
  width: 100%;
  height: 300rpx;
  background-image: url('https://lottery.72needyou.cn/lottery/data/image/material/zhuli.png');
  background-size: 100%;
  text-align: center;
  padding-top: 60rpx;
}

.ava{
  width:120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 0 auto;
  
}

.recommend{
  width: 100%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  box-shadow: none;
  background-color: #fff;
  /* border: 1rpx solid rgba(244, 245, 245, 1); */
  padding: 30rpx 30rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
}

.text-time{
  font-size: 24rpx;
  color: gray;
}

.text-desc{
  width: 90%;
  margin: 0 auto;
  display: flex;
  /* align-items: center; */
  line-height: 45rpx;
  letter-spacing: 3rpx;
  margin-bottom: 30rpx;
  font-size: 26rpx;
}

.hr{
  width: 90%;
  margin: 0 auto;
  height: 1px;
  border: 1px solid rgba(238, 238, 238, 1);
  margin-top: 10rpx;
}